{
  "name": "Ally browser assistant",
  "description": "An indispensable assistant for visually impaired and blind people in their daily internet browsing",
  "version": "0.0.1",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "clipboardWrite",
    "debugger",
    "management",
    "tts"
  ],
  "action": {
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.html",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": []
    }
  ],
  "commands": {
    "open-ally": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open command menu"
    }
  }
}